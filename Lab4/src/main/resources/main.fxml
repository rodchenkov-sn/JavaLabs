<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER"
          hgap="10.0"
          stylesheets="style.css" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.spbstu.controllers.MainSceneController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

        <HBox fx:id="mainBox">
            <Button fx:id="findButton" onAction="#findButtonClicked">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Button>
            <Button fx:id="addButton" onAction="#addButtonClicked">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Button>
            <Group fx:id="findGroup" visible="false">
                <HBox fx:id="findBox" visible="false">
                    <Button fx:id="cancelFind" onAction="#onCancel">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
                    <TextField fx:id="findField" promptText="Title">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                    <TextField fx:id="minPriceField" promptText="Min Price">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                    <TextField fx:id="maxPriceField" promptText="Max Price">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                    <Button fx:id="commitFind" onAction="#onFind">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
                </HBox>
            </Group>
            <Group fx:id="addGroup" visible="false">
                <HBox fx:id="addBox" visible="true">
                    <Button fx:id="cancelAdd" onAction="#onCancel">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
                    <TextField fx:id="prodIdAddField" promptText="Prod Id">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                    <TextField fx:id="titleAddField" promptText="Title">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                    <TextField fx:id="priceAddField" promptText="Price">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                    <Button fx:id="commitAdd" onAction="#onAdd">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
                </HBox>
            </Group>
        </HBox>

    
    <TableView fx:id="itemTable" editable="true" onKeyPressed="#onKeyPressedTable" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="prodIdCol" text="Prod Id" />
            <TableColumn fx:id="titleCol" text="Title" />
            <TableColumn fx:id="priceCol" onEditCommit="#onPriceEdit" text="Price" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
